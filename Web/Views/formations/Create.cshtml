                @Html.TextBoxFor(model => model.DateFinF, new { @type = "date", @class = "form-control datepicker" })
                @Html.ValidationMessageFor(model => model.DateFinF, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
