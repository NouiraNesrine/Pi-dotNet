@model Data.formation

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@{
    List<SelectListItem> listItems = new List<SelectListItem>();
    listItems.Add(new SelectListItem
    {
        Text = "analyse",
        Value = "analyse"
    });
    listItems.Add(new SelectListItem
    {
        Text = "devlopement",
        Value = "devlopement",
        Selected = true
    });
