@model Data.conge

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create","Conge", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container-fluid">


        <div class="row">
            <div class="col-lg-12">
                <div class="view-header">
                   
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-note2"></i>
                    </div>
                    <div class="header-title">
                        <h3>Add new Leave</h3>
                       
                    </div>
                </div>
                <hr>
            </div>
        </div>

        <div class="row">

            <div class="col-md-6">
                <div class="panel panel-filled">
                    <div class="panel-heading">
                        <div class="panel-tools">
                            <a class="panel-toggle"><i class="fa fa-chevron-up"></i></a>
                            <a class="panel-close"><i class="fa fa-times"></i></a>
                        </div>
                        Create Leave
                    </div>
                    <div class="panel-body">


                        <form>
                            <div class="form-group"><label for="exampleInputName">Begin Date</label>  @Html.EditorFor(model => model.dateDeb)</div>
                            <div class="form-group"><label for="exampleInputEmail1">End Date</label>  @Html.EditorFor(model => model.dateFin, new { @class = "form-control" }) </div>
                            <div class="form-group"><label for="exampleInputEmail1">Description</label>  @Html.EditorFor(model => model.description, new { @class = "form-control" })</div>

                            
                            <button type="submit" class="btn btn-default">Submit</button>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

}
